<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="113sp"
    android:layout_margin="12sp"
    android:elevation="4dp"
    android:background="@drawable/drop_shadow" >

    <ImageView
        android:id="@+id/notification_item_image"
        android:layout_width="77sp"
        android:layout_height="77sp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:background="@color/tempPhotoBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_message"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/notification_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="8dp"
        android:text="notification Title"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/notification_item_image"
        app:layout_constraintTop_toBottomOf="@+id/notification_message" />

    <TextView
        android:id="@+id/notification_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="4dp"
        android:text="Author Name"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/notification_item_image"
        app:layout_constraintTop_toBottomOf="@+id/notification_item_title" />

    <TextView
        android:id="@+id/notification_item_isbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="4dp"
        android:text="ISBN"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/notification_item_image"
        app:layout_constraintTop_toBottomOf="@+id/notification_item_author" />

    <ImageView
        android:id="@+id/notification_item_status"
        android:layout_width="22sp"
        android:layout_height="22sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/status_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_message" />

    <TextView
        android:id="@+id/notification_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="notification message"
        android:gravity="center"
        android:textColor="@color/borrowed"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>